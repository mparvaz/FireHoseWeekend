
<div class="custom-font boxy span5 offset3 text-center">


<h2 class="cool-font-small">Upload your stuff</h2>

<%= simple_form_for @pic do |f| %>
	<%= f.input :hour, :label=> 'Which Hour', :placeholder=> 'Enter the hour' 		%>
	<%= f.input :image, :label=> 'Upload A Pic', :as=> :file 		%>
	<%= f.input :emotion, :label=> 'How did you feel?', :placeholder=> 'Happy, Stoked, Angry, Pissed'	%>
	<%= f.input :learned, :label=> 'What did you learn?', :placeholder=> 'CSSA, HTML5, or whatever you like!', :input_html=> {:rows=> '5'}	%>
</br>

	<%= submit_tag 'Submit', :class => 'btn btn-warning btn-large' 	%>
	
<% end %>
</div>
