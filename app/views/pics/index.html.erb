<div class="custom-font">

<h2 class="cool-font-medium">This is how it all went down ...</h2>


<%	@pics.each do |pic| %>
<div class="boxy span3">
	<h2> 
		Hour <%= pic.hour %>
	</h2>
	
	<div>
		<%= image_tag pic.image.to_s	%>
	</div>

	<p>
	<%= pic.emotion %>
	</p>

	<p>
	I learned that
	<%= pic.learned %>
	</p>

	<% if pic.user.present? %>
		<p>
		Email: <%= pic.user.email %>
		</p>
		<% end%>
</div>


<% end %>
</div>

